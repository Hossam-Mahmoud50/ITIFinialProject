@model IEnumerable<CenterApp.Core.Models.Group>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-primary">Create New</a>
</p>
<table id="myTable" class="table table-bordered table-hover">
    <thead class="text-center table-danger">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Group_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Teacher)
            </th>
            <th>Edit</th>
            <th>Details</th>
            <th>Delete</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Group_Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Teacher.Teacher_Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Group_Id" class="btn btn-outline-success"><i class="fa fa-edit"></i></a> </td>
                 <td> <a asp-action="Details" asp-route-id="@item.Group_Id" class="btn btn-outline-warning"><i class="fa fa-eye-slash"></i></a> </td>
                 <td> <a asp-action="Delete" asp-route-id="@item.Group_Id"class="btn btn-outline-danger"><i class="fa fa-trash"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
@section Scripts
{
    <script>
        $(function() {
            $("#myTable").dataTable();
        });
    </script>
}
