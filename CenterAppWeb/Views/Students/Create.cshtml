@model StudentStageMaterialVM
@{
    ViewData["Title"] = "Create";
}


<div class="card ui-tab-card">
    <div class="card-body">
        <div class="heading-layout1 mg-b-25">
            <div class="item-title">
                <h3>Student Adding .... </h3>
            </div>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button"
                   data-toggle="dropdown" aria-expanded="false">...</a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#"><i class="fas fa-times text-orange-red"></i>Close</a>
                    <a class="dropdown-item" href="#"><i class="fas fa-cogs text-dark-pastel-green"></i>Edit</a>
                    <a class="dropdown-item" href="#"><i class="fas fa-redo-alt text-orange-peel"></i>Refresh</a>
                </div>
            </div>
        </div>
        <div class="basic-tab">
            <ul class="nav nav-tabs" role="tablist">
                <li class="nav-item">
                    <a class="nav-link active" data-toggle="tab" href="#tab1" role="tab" aria-selected="true">Home</a>
                </li>
                <li class="nav-item">
                    <a class="nav-link" data-toggle="tab" href="#tab2" role="tab" aria-selected="false">add Student to Matrial </a>
                </li>

            </ul>
            <div class="tab-content">
                <div class="tab-pane fade show active" id="tab1" role="tabpanel">
                    @if (ViewBag.Message != null)
                    {
                        <div class="alert alert-success">
                            @ViewBag.Message
                        </div>
                    }
                    <div class="row" id="tab1">
                        <form asp-action="Create" asp-controller="Students" method="post" class="new-added-form" enctype="multipart/form-data">
                            <div class="row" id="tab1">
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_Name">Student Name *</label>
                                    <input asp-for="Student.Student_Name" type="text" placeholder="" class="form-control">
                                    <span asp-validation-for="Student.Student_Address" class="text-danger"></span>
                                </div>
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_Address">Student Address *</label>
                                    <input asp-for="Student.Student_Address" type="text" placeholder="" class="form-control">
                                    <span asp-validation-for="Student.Student_Address" class="text-danger"></span>
                                </div>

                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_BirthOfDate" class="control-label">BirthOfDate *</label>
                                    <input asp-for="Student.Student_BirthOfDate" class="form-control" />

                                    <span asp-validation-for="Student.Student_BirthOfDate" class="text-danger"></span>

                                </div>

                                <div class="col-xl-3 col-lg-6 col-12 form-group form-select">
                                    <label asp-for="Student.Gender">Gender *</label>
                                    <select asp-for="Student.Gender" class="form-select form-control" aria-label="Default select example" style="padding: 10px; background:#edf2ff; border:none;">
                                        <option selected>Please Select Gender *</option>
                                        <option value="true">Male</option>
                                        <option value="false">Female</option>
                                    </select>



                                </div>

                               
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_RegisterDate" class="control-label"></label>
                                    <input asp-for="Student.Student_RegisterDate" class="form-control" />

                                    <span asp-validation-for="Student.Student_RegisterDate" class="text-danger"></span>

                                </div>


                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_Email">E-Mail</label>
                                    <input asp-for="Student.Student_Email" type="email" placeholder="" class="form-control">
                                    <span asp-validation-for="Student.Student_Email" class="text-danger"></span>
                                </div>

                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_StdPhone">Student Phone</label>
                                    <input asp-for="Student.Student_StdPhone" type="text" placeholder="" class="form-control">
                                    <span asp-validation-for="Student.Student_StdPhone" class="text-danger"></span>
                                </div>
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Student_ParentPhone">Parent Phone</label>
                                    <input asp-for="Student.Student_ParentPhone" type="text" placeholder="" class="form-control">
                                    <span asp-validation-for="Student.Student_ParentPhone" class="text-danger"></span>
                                </div>
                                <div class="col-xl-3 col-lg-6 col-12 form-group">
                                    <label asp-for="Student.Stage_id" class="control-label"></label>
                                    <select asp-for="Student.Stage_id" class="form-control" asp-items="ViewBag.Stage_id"></select>

                                </div>
                               
                                <div class="col-lg-6 col-12 form-group mg-t-30">
                                    <label value="image" class="text-dark-medium">Upload Student Photo (150px X 150px)</label>
                                    <input  type="file"  class="form-control-file">
                                </div>
                                <div class="col-12 form-group mg-t-8">
                                    <button type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Save</button>
                                    <button type="reset" class="btn-fill-lg bg-blue-dark btn-hover-yellow">Reset</button>
                                </div>
                            </div>

                            <div>
                                <br />

                                <a asp-action="Index">Back to List</a>
                            </div>
                        </form>
                    </div>
                </div>

                <!--------------------------------------------------------------------------->

                <div class="tab-pane fade" id="tab2" role="tabpanel">
                    <h4>StudentMaterial</h4>
                    <hr />
                    <div class="row" id="tab2">
                        <div class="col-xl-3 col-lg-6 col-12 form-group">
                            <form asp-action="CreateMatrial" asp-controller="Students" method="Post">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                                @*div class="form-group">
                                <label asp-for="Level_Id" class="control-label"></label>
                                <select asp-for="Level_Id" class ="form-control" asp-items="ViewBag.Level_Id"></select>
                                </div>*@
                                <div class="form-group">
                                    <label asp-for="Stage_Id" class="control-label"></label>
                                    <select asp-for="Stage_Id" class="form-control" asp-items="ViewBag.Stage_Id"></select>
                                </div>
                                <div class="form-group">
                                    <label asp-for="Matrial_Id" class="control-label"></label>
                                    <select asp-for="Matrial_Id" class="form-control" asp-items="ViewBag.Matrial_Id"></select>
                                </div>
                                <input type="hidden" asp-for="Student.Student_Id" />

                                <div class="col-xl-3 form-group">
                                    <button type="submit" value="Create" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Create</button>
                                </div>

                                <div>
                                    <br /><br />
                                    <a asp-action="Index">Back to List</a>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>

            </div>
        </div>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }