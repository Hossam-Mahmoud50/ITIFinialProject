@model  ExamScheduleVM

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit Exam</h1>

<h4>Exam</h4>
<hr />
<form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Exam.Exam_Title" />
            <div class="row">
            <div class="col-xl-3 col-lg-6 col-12 form-group">
                <label asp-for="Exam.Exam_Title" class="control-label"></label>
                <input asp-for="Exam.Exam_Title" class="form-control" />
                <span asp-validation-for="Exam.Exam_Title" class="text-danger"></span>
            </div>
            <div class="col-xl-3 col-lg-6 col-12 form-group">
                <label asp-for="Exam.Matrials.Matrial_Name" class="control-label"></label>
                 <select asp-for="Exam.Matrials.Matrial_Name" class ="form-control" 
                    asp-items="ViewBag.Matrial_Name"></select>
            </div>
           
            <div class="col-xl-3 col-lg-6 col-12 form-group">
                <label asp-for="Exam.Group.Group_Name" class="control-label"></label>
                 <select asp-for="Exam.Group.Group_Name" class ="form-control" 
                    asp-items="ViewBag.Group_Name"></select>
            </div>
           
            <div class="col-xl-3 col-lg-6 col-12 form-group">
                <label asp-for="Exam.Time" class="control-label"></label>
                <input asp-for="Exam.Time" class="form-control" />
                <span asp-validation-for="Exam.Time" class="text-danger"></span>
            </div>
             <div class="col-xl-3 col-lg-6 col-12 form-group">
                <label asp-for="Exam.Exam_Start_Date" class="control-label"></label>
                <input asp-for="Exam.Exam_Start_Date" class="form-control" />
                <span asp-validation-for="Exam.Exam_Start_Date" class="text-danger"></span>
            </div>
             
                
             <div class="col-12 form-group mg-t-8">
                <input type="submit" value="Save" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark" />
            </div>
             </div>
        </form>
   


<div>
    <a asp-action="IndexExam">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
