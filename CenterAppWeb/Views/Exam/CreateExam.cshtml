@using CenterAppWeb.ViewModel;
@model Exam;
@{
    ViewData["Title"] = "CreateExam";
}
<div class="card ui-tab-card">
    <div class="card-body">
        <div class="heading-layout1 mg-b-25">
            <div class="item-title">
                <h3>Add New Exam</h3>
            </div>
            <div class="dropdown">
                <a class="dropdown-toggle" href="#" role="button"
                   data-toggle="dropdown" aria-expanded="false">...</a>

                <div class="dropdown-menu dropdown-menu-right">
                    <a class="dropdown-item" href="#"><i class="fas fa-times text-orange-red"></i>Close</a>
                    <a class="dropdown-item" href="#"><i class="fas fa-cogs text-dark-pastel-green"></i>Edit</a>
                    <a class="dropdown-item" href="#"><i class="fas fa-redo-alt text-orange-peel"></i>Refresh</a>
                </div>
            </div>
        </div>
               @if (ViewBag.Message is not null)
            {
                <div class="card">
                <div class="card-body ">
                    <p class="alert alert-success">@ViewBag.Message</p>
                </div>
                </div>
            }
              <div class="tab-content">
                <div class="tab-pane fade show active" id="tab1" role="tabpanel">
                    <form asp-action="CreateExam" method="post" class="new-added-form" enctype="multipart/form-data">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="row">
                           <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label asp-for="Exam_Title" class="control-label"></label>
                                <input asp-for="Exam_Title" class="form-control" />
                                <span asp-validation-for="Exam_Title" class="text-danger"></span>
                           </div>
                           <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label asp-for="Matrial_Id" class="control-label"></label>
                                <select asp-for="Matrial_Id" class ="form-control" 
                                    asp-items="ViewBag.Matrial_Name"></select>
                           </div>
                          
                           <div class="col-xl-3 col-lg-6 col-12 form-group">
                             <label asp-for="Group_Id" class="control-label"></label>
                             <select asp-for="Group_Id" class ="form-control" 
                              asp-items="ViewBag.Group_Name"></select>
                           </div>
                           <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label asp-for="Time" class="control-label"></label>
                                <input asp-for="Time" class="form-control" />
                                <span asp-validation-for="Time" class="text-danger"></span>
                            </div>
                            <div class="col-xl-3 col-lg-6 col-12 form-group">
                                <label asp-for="Exam_Start_Date" class="control-label"></label>
                                <input asp-for="Exam_Start_Date" class="form-control" />
                                <span asp-validation-for="Exam_Start_Date" class="text-danger"></span>
                            </div>
                            <div class="col-12 form-group mg-t-8">
                               <div class="row">
                              <div class="col-xl-3 form-group">
                                <button type="submit" class="fw-btn-fill btn-fill-md btn-gradient-yellow">Save</button>
                              </div>
                                <div class="col-xl-3 form-group">
                                @* <button type="submit" asp-action="IndexExam" asp-route-id="@item.Exam.Exam_Title" class="btn-fill-lg btn-gradient-yellow btn-hover-bluedark">Save</button>*@
                                <button type="reset" class="fw-btn-fill btn-fill-md btn-gradient-yellow">Reset</button>
                               </div>
                               </div>
                            </div>
                         </div>
                     </form>
                 </div>
            </div>
       </div>
   </div>

